<div class="well">
  <div class="row">
    <div class="col-xs-2">
      <h4><%= link_to image_tag(product.primary_image, size: Settings.default.product.image_size), product %></h4>
    </div>
    <div class="col-xs-2">
      <h4>#</h4>
      <h4><%= link_to product.name, product %></h4>
    </div>
    <div class="col-xs-8">
      <%= form_tag item_path(item.product_id), method: :put, remote: true do %>
        <h4 class="text-right"><%= t ".unit_price" %>: <span style="color: green"><%= number_to_currency item.unit_price %></span></h4>
        <div class="row">
          <div class="col-xs-4">
            <%= number_field_tag :qty, item.qty.to_i, class: "form-control", min: Settings.default.order.min %>
            <%= hidden_field_tag :product_id, product.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="col-md-6">
              <%= submit_tag t("carts.show.update_quantity"), class: "btn btn-primary" %>
            </div>
            <div class="col-md-6">
              <%= link_to t("carts.show.detete"), item_path(id: item.product_id, product_id: item.product_id), { data: { confirm: t("carts.show.sure_delete") + "'#{product.name}'" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
        <h4 class="text-right"><%= t".total_price" %> : <span style="color: green"><%= number_to_currency item.total_price %></span></h4>
      <% end %>
    </div>
  </div>
</div>
