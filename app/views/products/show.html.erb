<% provide :title, t(".title") %>
<div class="container">
  <div class="col-sm-4">
  <div class="panel panel-primary">
    <div class="panel-heading"><%= @product.name %></div>
    <div class="panel-body center"><%= image_tag @product.primary_image,
      size: Settings.default.product.image_size_show %>
    </div>
    <div class="panel-footer">
      <div class="row">
        <div class="col-md-6">
          <span class="label-info"><%= t ".price" %></span>
          <span class="label-price"><%= @product.current_price %></span>
        </div>
        <div class="col-md-6 pull-right">
          <%= link_to t(".add_cart"), items_path(id: 1, product_id: @product.id, qty: Settings.default.quantity), method: :post, remote: true, class: "btn-success form-control center" %>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
<div class="container">
<div class="col-md-12"><%= render_shareable :buttons=> ["twitter", "facebook"] %></div>
</div>
<div class="container">
<div class="fb-comments" data-href=<%= request.original_url %>
  data-width="470" data-num-posts="2"></div>
</div>
