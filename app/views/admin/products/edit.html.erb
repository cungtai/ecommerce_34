<% provide :title, t("admin.products.update.title") %>
<h4><%= t("admin.products.update.title") %></h4>

<div class="container">
    <%= form_for [:admin, @product] do |f| %>
      <div class="row">
        <div class="col-md-2">
          <%= f.label :name %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <%= f.label :quantity %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :qty %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <%= f.label :tag %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :tag %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <%= f.label :catalog %>
        </div>
        <div class="col-md-4">
          <%= f.collection_select :catalog_id, Catalog.order_catalogs, :id, :name,
            {}, {class: "form-control"} %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <%= f.label :content %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :content, id: "content_editor" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div id="images">
            <%= f.fields_for :images do |images_form| %>
              <%= render "image_fields", f: images_form %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="links">
            <%= link_to_add_association t("admin.products.create.add_image"), f, :images %>
          </div>
        </div>
      </div>
      <%= f.submit t("admin.products.update.save_change"), class: "btn btn-primary" %>
    <% end %>
</div>
