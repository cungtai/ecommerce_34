<% provide :title, t("admin.staticpages.update.title") %>
<h1 class="col-sm-8 col-sm-offset-4"><%= t("admin.staticpages.update.title") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @static_page] do |f| %>
      <%= f.label :key %>
      <%= f.text_field :key, class: "form-control" %>

      <%= f.label :value %>
      <%= f.text_area :value, class: "form-control", id: "content_editor" %>
      <br/>
      <%= f.submit t("admin.staticpages.update.save_change"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
